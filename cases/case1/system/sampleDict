FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sampleDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

interpolationScheme cellPoint;

setFormat       xmgr;

sets
(
    lineCcentral
    {
        type    uniform;
        axis    y;
        start   (0.0  -1.0  0.0);
        end     (0.0   1.0  0.0);
        nPoints 101;
    }
);

surfaces();

fields          ( C );


